
#Atualizar usamos o update junto com where

import sqlite3 as conector

# Abertura de conexão e aquisição de cursor
conexao = conector.connect("./meu_banco.db")
conexao.execute("PRAGMA foreign_keys = on") #chaves estrangeiras
cursor = conexao.cursor()

# Definição dos comandos
#comando1 = '''UPDATE Pessoa SET oculos = 1;'''
#cursor.execute(comando1) # da error, todos vão ter oculos.

comando2 = '''UPDATE Pessoa SET oculos = ? WHERE cpf = 4185443366;'''
cursor.execute(comando2, (False,)) #Vai procurar o cpf especifico e alterar pelo delimitador

comando3 = '''UPDATE Pessoa SET oculos = :usa_oculos WHERE cpf = :cpf;'''
cursor.execute(comando3, {"usa_oculos": False, "cpf": 4185443366}) #Vai procurar o cpf especifico e alterar pelo parametro

# Efetivação do comando
conexao.commit()

# Fechamento das conexões
cursor.close()
conexao.close()



#Delete utilizamos junto com where

import sqlite3 as conector

# Abertura de conexão e aquisição de cursor
conexao = conector.connect("./meu_banco.db")
conexao.execute("PRAGMA foreign_keys = on")
cursor = conexao.cursor()

# Definição do comando
comando = '''DELETE FROM Pessoa WHERE cpf = 10000000010;'''
cursor.execute(comando)

# Efetivação do comando
conexao.commit()

# Fechamento das conexões
cursor.close()
conexao.close()

