Objetivo: Automatizar o processo de inserção no banco de dados

No modelo.py:

class Pessoa:
    def __init__(self, cpf, motor, nome, data_nascimento, usa_oculos):
        self.cpf = cpf
        self.motor = motor
        self.nome = nome
        self.data_nascimento = data_nascimento
        self.usa_oculos = usa_oculos


na Main:

import sqlite3 as conector
from modelo import Pessoa

try:
    conexao = conector.connect("./meu_banco.db")
    cursor = conexao.cursor()

    # Criação de um objeto do tipo Pessoa
    pessoa = Pessoa(10000000099,187, 'Maria', '1990-01-31', False)


    comando = '''INSERT INTO Pessoa(cpf, motor, nome, nascimento, oculos) 
                 VALUES (?, ?, ?, ?, ?)'''

    cursor.execute(comando,(pessoa.cpf,
                            pessoa.motor,
                            pessoa.nome,
                            pessoa.data_nascimento,
                            pessoa.usa_oculos))
    conexao.commit()

except conector.DatabaseError as err:
    print("Erro de banco de dados:", err)

finally:
    if conexao:
        cursor.close()
        conexao.close()


Deve importar o from modelo import Pessoa.

E na parte de inserção:

# Criação de um objeto do tipo Pessoa
    pessoa = Pessoa(10000000099,187, 'Maria', '1990-01-31', False)


    comando = '''INSERT INTO Pessoa(cpf, motor, nome, nascimento, oculos) 
                 VALUES (?, ?, ?, ?, ?)'''

    cursor.execute(comando,(pessoa.cpf,
                            pessoa.motor,
                            pessoa.nome,
                            pessoa.data_nascimento,
                            pessoa.usa_oculos))

    
  
